FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.water 1
);

regions
(
    // 1. Set the Oil Column
    // Oil height is 0.15m 
    boxToCell
    {
        box (-0.1 -0.1 -1) (0.1 0.05 1); 
        fieldValues
        (
            volScalarFieldValue alpha.water 0
        );
	}
		
    // 2. Create the Oil Bubble
    // Located at x=0.05 y=0.05
    sphereToCell
    {
        origin (0.05 0.05 0); 
        radius 0.01; 
		fieldValues
		(
			volScalarFieldValue alpha.water 0
		);
    }
);


// ************************************************************************* //
