FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale 1;

lengthx 0.1;
lengthy 0.1;
lengthz 0.001;

vertices
(
    (0        0        -0.001)   // 0
    ($lengthx 0        -0.001)   // 1
    ($lengthx $lengthy -0.001)   // 2
    (0        $lengthy -0.001)   // 3
    (0        0         0.001)   // 4
    ($lengthx 0         0.001)   // 5
    ($lengthx $lengthy  0.001)   // 6
    (0        $lengthy  0.001)   // 7
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (200 200 1) simpleGrading (1 1 1)
);


boundary
(
    top
    {
        type wall;
        faces
        (
            (3 7 6 2)
        );
    }
    bottom
    {
        type wall;
        faces
        (
            (1 5 4 0)
        );
    }
    left
    {
        type wall;
        faces
        (
            (0 4 7 3)
        );
    }
    right
    {
        type wall;
        faces
        (
            (2 6 5 1)
        );
    }
);

