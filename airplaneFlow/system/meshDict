FoamFile
{
    version   2.0;
    format    ascii;
    class     dictionary;
    location  "system";
    object    meshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaceFile "windTunnel.stl";

maxCellSize 1.0; //1 m cell size

localRefinement
{
	plane
	{
		//around the object
		refinementThickness 3.0;
		//region with smaller cells
		cellSize 0.35;
	}
}

objectRefinements
{
	finerMesh
	{
	type box;
	cellSize 0.35;
	centre (5 0 0);
	lengthX 22;
	lengthY 9;
	lengthZ 9;
	}
}

boundaryLayers
{
	patchBoundaryLayers
	{
		plane
		{
			nLayers 2;
			thicknessRatio 1;
		}
	}
}

renameBoundary
{
	newPatchNames
	{
		plane
		{
			newName object;
			type wall;
		}
		xMin
		{
			newName inlet;
			type patch;
		}
		xMax
		{
			newName outlet;
			type patch;
		}
		"(yMin|yMax|zMin|zMax)"
		{
			newName sym;
			type symmetry;
		}
	}
}